<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIActivity"
    android:padding="16dp"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/uiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/reportCrimeBtn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/report_crime"
        android:background="@drawable/btrrounded"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@id/uiTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/viewReportsBtn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/view_reports"
        android:background="@drawable/btrrounded"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@id/reportCrimeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:background="@drawable/btrrounded"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@id/viewReportsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
